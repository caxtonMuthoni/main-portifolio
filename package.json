{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Caxton Muthoni G portifolio",
  "main": "index.js",
  "scripts": {
    "compile:scss": "node-sass sass/main.scss css/style.css -w",
    "devServer": "live-server",
    "start": "npm-run-all --parallel devServer compile:scss",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.pref.css",
    "compress:css": "node-sass css/style.pref.css css/style.css --output-style compressed",
    "build": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Muthoni G Caxton",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
